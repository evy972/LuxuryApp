<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context="com.example.evy.ocs.HomeActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button3"
        android:layout_width="182dp"
        android:layout_height="35dp"
        android:layout_marginBottom="29dp"
        android:background="@color/colorPrimary"
        android:onClick="map"
        android:text="MAP"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_my_account" />

    <Button
        android:id="@+id/button6"
        android:layout_width="187dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="82dp"
        android:background="@color/colorPrimary"
        android:onClick="products"
        android:text="View Products"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/home_my_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_my_account"
        android:layout_width="182dp"
        android:layout_height="36dp"
        android:layout_marginBottom="27dp"
        android:background="@color/colorAccent"
        android:onClick="myAccunt"
        android:text="My Account"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginBottom="268dp"
        android:background="@color/colorAccent"
        android:onClick="about"
        android:text="ABOUT"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />
</android.support.constraint.ConstraintLayout>
