<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_opt"
    tools:context="com.example.evy.ocs.GalleryActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageShow"
        android:layout_width="187dp"
        android:layout_height="146dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="84dp"
        android:background="@drawable/click"
        app:layout_constraintBottom_toTopOf="@+id/bUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/>

    <Button
        android:id="@+id/bUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="186dp"
        android:layout_marginEnd="60dp"
        android:background="@color/colorPrimary"
        android:onClick="next"
        android:text="Upload"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageShow"
        app:layout_constraintTop_toBottomOf="@+id/imageShow"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="92dp"
        android:text="Choose Profile Picture: "
        app:layout_constraintBottom_toTopOf="@+id/imageShow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Choose Image"
        app:layout_constraintStart_toStartOf="@+id/imageShow"
        app:layout_constraintTop_toBottomOf="@+id/imageShow"
        />

</android.support.constraint.ConstraintLayout>
