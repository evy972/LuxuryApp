<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_opt"
    tools:context="com.example.evy.ocs.GalleryActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageShow"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintBottom_toTopOf="@+id/bSelectImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/bUpload"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginBottom="215dp"
        android:layout_marginStart="26dp"
        android:background="@color/colorAccent"
        android:onClick="next"
        android:text="Upload"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bSelectImage"
        app:layout_constraintTop_toBottomOf="@+id/bSelectImage" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:text="Choose Profile Picture: "
        app:layout_constraintBottom_toTopOf="@+id/imageShow"
        app:layout_constraintEnd_toEndOf="@+id/imageShow"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bSelectImage"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginBottom="22dp"
        android:background="@color/colorPrimary"
        android:text="Choose Image"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/bUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageShow" />

</android.support.constraint.ConstraintLayout>
